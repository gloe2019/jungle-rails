<!DOCTYPE html>
<html>
  <head>
    <title>Jungle</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/top_nav' %>
    <main class="container">
      <% if active_sale? %>
        <p class="alert alert-info"> Our <%="Back to school"%> sale is active! <strong>Everything is <%= 50 %>  percent off for a limited time!</p>
        </strong>
      <%end%>
      <%= yield %>
    </main>
    <%= yield :end_of_body %>
  </body>
</html>
