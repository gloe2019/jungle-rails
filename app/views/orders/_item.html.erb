<% @order_items.each do |item| %>
  <% product = Product.find(item.product_id) %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
    </td>
    <td>
      <p><%= product.description %></p>
    </td>
    <td>
      <p><%= item.quantity.to_i %></p>
    </td>
    <td>
      <p><%= humanized_money_with_symbol item.total_price_cents / 100.0 %></p>
    </td>
  </tr>
<% end %>
